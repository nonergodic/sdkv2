{
  "compilerOptions": {
    "composite": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020", "DOM"],
    "module": "CommonJS",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./bin"
  }
}
