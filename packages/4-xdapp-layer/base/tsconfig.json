{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module":"CommonJS",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./bin",
    "composite": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/anchor-idl/*.json"
  ]
}
