{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  }
}